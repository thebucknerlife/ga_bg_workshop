<!DOCTYPE html>
<html>
<head>
  <title>Gifster</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1 class='brand'>Gifster</h1>

<% if current_user %>
  <%= link_to "Logout", logout_path, method: :delete %>
<% else %>
  <%= link_to "Signup", new_user_path %> or <%= link_to "Login", login_path %>
<% end %>

<div class='container'>
  <% flash.each do |key,msg| %>
    <div class="flash-<%= key %>">
      <span><%= msg %></span>
    </div>
  <% end %>

  <%= yield %>
</div>
</body>
</html>
